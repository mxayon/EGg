<div class="segment">
  <%= line_chart Log.group(:starting_mood).group_by_day(:created_at).count %>

</div>
<div class="ui container">
  <div class="ui segment">
    <a class="ui ribbon label">
      <i class="gamepad icon"></i>
      Level: <%= @log.level %>
    </a>

    Title: <%= @log.title %>
    Date of Log: <%= @log.date %>


    <div class="ui segment">
      <div class="ui dividing header">
        <i class="settings icon"></i>
        <div class="content">
          <%= @log.starting_mood %>
          <div class="sub header">Learner Starting mood </div>
        </div>
      </div>
    </div>

    <div class="ui segment">
      <div class="ui top attached label">1. Can Identify Emotion</div>
      <p>
        <i class="assistive listening systems icon"></i>
        Can Verbally Express:
        <%= @log.verbal_word_approximation %>
          |
          <i class="sign language icon"></i>
          Can Physically Identify:
          <%= @log.physically_identify %>

      </p>
    </div>


    <div class="ui segment">
      <div class="ui top attached label">2. Can Make Good Choices</div>
      <p> Good Choices Used: <%= @log.good_choices %></p>
    </div>

    <div class="ui segment">
      <div class="ui top attached label">3. Can Act Out Good Choices</div>
      <p> Assistive Instructions Given: <%= @log.good_choices %></p>
    </div>

    <div class="ui segment">
      <a class="ui ribbon label">Observations:</a>
      <p>
        <%= @log.observations %>
      </p>
    </div>
    <div class="ui segment">
      <a class="ui ribbon label">Comments: </a>
      <p>
        <%= @log.comments %>
      </p>
    </div>

  </div>
  <%= link_to "Delete", learner_log_path, method: :delete %>
  |
  <a href="<%= edit_learner_log_path(@learner, @log) %>" class="button expanded">Edit Log</a> |

</div>
