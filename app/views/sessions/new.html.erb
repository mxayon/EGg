<div class="ui raised very padded text container segment centered">
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag 'twitt_egg.png', class: "ui small image" %>
      <br>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_tag '/login' do %>
    <form class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui right icon input">
            <i class="user right icon input"></i>
              <%= text_field_tag :email %>
          </div>
        </div>
        <div class="field">
          <div class="ui right icon input">
            <i class="lock icon"></i>
              <%= password_field_tag :password %>
          </div>
        </div>
        <%= submit_tag 'Login', class: 'ui fluid large submit button' %>
      </div>

      <div class="ui error message"></div>

    </form>
    <% end %>

    <div class="ui message">
      New to us? <%= link_to 'Signup', '/signup' %>
    </div>
  </div>
</div>
</div>
